{
  "ecmaFeatures": {
    "jsx": true
  },
  "env": {
    "browser": true,
    "node": true,
    "jquery": true
  },
  "rules": {
    "quotes": [2, "single", "avoid-escape"],
    "no-trailing-spaces": [2, { "skipBlankLines": true }],
    "no-multiple-empty-lines": [2, {"max": 2}],
    "eol-last": 2,
    "no-unused-vars": [0, {"vars": "all", "args": "after-used"}],
    "no-underscore-dangle": 0,
    "no-alert": 2,
    "no-lone-blocks": 2
  },
  "globals": {
    jQuery: true,
    $: true
  }
}
